<% flash.each do |key, value| %>
<!--赤文字のフラッシュメッセージ、患者側のエラーだけ別で設定。redirectに対応している。-->
<% if patient_signed_in? && value == "・症状を入力してください" %>
  <% class_name = "text-dark" %>
<% else %>
  <% class_name = "text-danger" %>
<% end %>
  <%= content_tag(:p, value, class: "alert alert-#{key} mt-2 #{class_name}") %>
<% end %>