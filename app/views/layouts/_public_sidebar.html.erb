<% if patient_signed_in? %>

<div class='col-md-1 sidebar-all'>
  <div class="sidebar mb-2 mb-md-3 mt-0 mt-md-3">
    <div class="row">
      <div class="col">
        <%= link_to public_top_path(patient_id: @patient) do %>
          予約取得<i class="fas fa-tooth ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sidebar mb-2 mb-md-3">
    <div class="row">
      <div class="col">
        <%= link_to history_public_appointment_path(current_patient) do %>
          予約履歴
          <% unchecked_count = current_patient.unchecked_appointments.count %>
          <div class="maru <%= "border-black" if unchecked_count == 0 %>">
            <%= unchecked_count %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sidebar mb-2 mb-md-3">
    <div class="row">
      <div class="col">
        <%= link_to public_patient_path(current_patient) do %>
          登録情報<i class="fas fa-user-cog ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sidebar mb-2 mb-md-3">
    <div class="row">
      <div class="col">
        <%= link_to destroy_patient_session_path, method: :delete do %>
          ログアウト<!--Log out<i class="fas fa-sign-out-alt ml-2"></i>-->
        <% end %>
      </div>
    </div>
  </div>
</div>

<% else %>

<div class='col-md-1 sidebar-all'>

  <div class="sidebar mb-2 mb-md-3 mt-0 mt-md-3">
    <div class="row">
      <div class="col">
        <%= link_to public_top_path(patient_id: @patient) do %>
          予約状況<i class="fas fa-tooth ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sidebar mb-2 mb-md-3 mt-0 mt-md-3">
    <div class="row">
      <div class="col">
        <%= link_to new_patient_registration_path(patient_id: @patient) do %>
          新規登録<i class="fas fa-user-plus ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sidebar mb-2 mb-md-3 mt-0 mt-md-3">
    <div class="row">
      <div class="col">
        <%= link_to patient_session_path(patient_id: @patient) do %>
          ログイン<i class="fas fa-sign-in-alt ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% end %>