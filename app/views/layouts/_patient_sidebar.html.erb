<div class='col-md-1 sidebar-all'>
  <div class="sidebar mb-2 mb-md-3 mt-0 mt-md-3">
    <div class="row">
      <div class="col">
        <%= link_to public_top_path(patient_id: @patient) do %>
          予約状況<i class="fas fa-tooth ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sidebar mb-2 mb-md-3">
    <div class="row">
      <div class="col">
        <%= link_to public_appointments_path(current_patient) do %>
          予約履歴<i class="fas fa-user-plus ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sidebar mb-2 mb-md-3">
    <div class="row">
      <div class="col">
        <%= link_to public_patient_path(current_patient) do %>
          登録情報<i class="fas fa-users ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sidebar mb-2 mb-md-3">
    <div class="row">
      <div class="col">
        <%= link_to destroy_patient_session_path, method: :delete do %>
          ログアウト<i class="fas fa-sign-out-alt ml-2"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>