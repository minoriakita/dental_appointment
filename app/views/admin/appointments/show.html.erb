<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'layouts/sidebar' %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div class="mini-title">
        <%#= @patient_form.patient_id.name %>さんの予約詳細
      </div>
      <table class="table table-bordered ml-5">
        <tbody>
          <tr>
            <th class="col-4 text-center">カルテNo</th>
            <td>
              <%#= @appointment_form.patient_id %>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center">予約日時</th>
            <td>
              <%#= @appointment_form.appointment_date %>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center">担当者</th>
            <td>
              <%#= @appointment_form.charge_id %>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center">年齢</th>
            <td>

            </td>
          </tr>
          <tr>
            <th class="col-4 text-center">性別</th>
            <td>
              <%#= @patient.gender %>
            </td>
          </tr>
          <tr>
            <th class="col-4 text-center">電話番号</th>
            <td><%#= @patient.telephone_number %></td>
          </tr>
          <tr>
            <th class="col-4 text-center">メールアドレス</th>
            <td><%#= @patient.email %></td>
          </tr>
          <tr>
            <th class="col-4 text-center">郵便番号</th>
            <td><%#= @patient.postal_code %></td>
          </tr>
          <tr>
            <th class="col-4 text-center">住所</th>
            <td><%#= @patient.address %></td>
          </tr>
          <tr>
            <th class="col-4 text-center">注意事項</th>
            <td><%#= @patient.patient_text %></td>
          </tr>
          <tr>
            <th class="col-4 text-center">予約者</th>
            <td>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="form-group text-center">
        <%#= link_to "編集", edit_admin_patient_path(params[:id]), class: 'btn btn-sm btn-success col-4' %>
      </div>
    </div>
  </div>
</div>