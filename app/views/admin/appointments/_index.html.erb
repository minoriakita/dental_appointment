<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= appointment.appointment_date.strftime("%H時%M分")%></h5>
    <div class="card-subtitle mb-2 text-muted">
      <%= link_to "#{appointment.patient.full_name} / #{appointment.patient.full_name_kana} (#{appointment.patient.get_age}歳)", admin_appointment_path(appointment.id), class: "text-dark" %>
    </div>
    <div class="card-text">

      <div class="row">
        <div class="col-3">治療</div>
        <div class="col-9">
          <% appointment.treatments.each do |treatment| %>
            <!--<%= treatment.name %><br>-->
            <span class="badge badge-pill badge-secondary mr-1"><%= treatment.name %></span>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">症状</div>
        <div class="col-9">
          <% appointment.symptoms.each do |symptom| %>
            <!--<%= symptom.name %><br>-->
            <span class="badge badge-pill badge-secondary mr-1"><%= symptom.name %></span>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">予約状態</div>
        <div class="col-9">
          <%= appointment.status_i18n %>
        </div>
      </div>

    </div>
  </div>
</div>

