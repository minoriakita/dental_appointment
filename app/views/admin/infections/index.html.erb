<div class='row'>
 <%= render 'layouts/item_sidebar' %>
  <div class='col-md-8 offset-md-1 mt-3'>
   <h3>感染症一覧・追加</h3>
   <%= render 'layouts/error', obj: @infection %>

   <div class="form-group">
    <%= form_with model: @infection, url: admin_infections_path, method: :post do |f| %>
     <div class="row">
      <div class="col-4 mt-2">
       <%= f.label :感染症名 %>
       <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-3 mt-4 pt-3 pl-0 ">
       <%= f.submit "新規登録", class: "btn btn-outline-info" %>
      </div>
     </div>
    <% end %>
  </div>

    <% @infections.each do |infection| %>
     <div class="row mb-3">
      <div class="col-md-4">
       <%= infection.name %>
      </div>
      <div>
       <%= link_to "編集", edit_admin_infection_path(infection), class: "btn btn-sm btn-block btn-outline-secondary" %>
      </div>
     </div>
    <% end %>
  </div>
</div>