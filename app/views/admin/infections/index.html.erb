<div class="container">
  <div class="row">
     <div class="mini-title">感染症一覧・追加</div>
     </div>
    <div>
     <%= form_with model: @infection, url: admin_infections_path, method: :post do |f| %>
     <%= f.label :感染症名 %>
     <%= f.text_field :name %>
     <%= f.submit "新規登録", class: "btn btn-success ml-3 mb-2" %>
     <% end %>
    </div>
  <div class="row">
   <div class="col-5">
    <table class="table table-bordered table-hover text-center">
     <thead class="thead">
      <tr>
       <th>感染症</th>
       <th colspan="3"></th>
      </tr>
     </thead>
    <tbody class="tbody">
      <% @infections.each do |infection| %>
       <tr>
        <td><%= infection.name %></td>
        <td><%= link_to "編集する", edit_admin_infection_path(infection), class: "btn btn-sm btn-success admin_genre_edit" %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
  </div>
 </div>
</div>