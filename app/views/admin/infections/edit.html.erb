<div class="container py-3">
 <div class="row">
  <div class="mini-title">感染症名編集</div>
 </div>
 <%= render 'layouts/error', obj: @infection %>
 <div class="row pt-4">
   <%= form_with model: @infection, url: admin_infection_path(@infection), method: :patch do |f| %>
   <%= f.label :感染症名 %>
   <%= f.text_field :name %>
   <%= f.submit "変更を保存" ,class: "btn btn-primary" %>
   <%= link_to "削除する", admin_infection_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
   <% end %>
 </div>
   <%= link_to "戻る", admin_infections_path %>
 </div>