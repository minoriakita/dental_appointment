<div class='row'>
 <%= render 'layouts/item_sidebar' %>
  <div class='col-md-9 offset-md-1 mt-3'>
   <h3>感染症名編集</h3>
   <%= render 'layouts/error', obj: @infection %>

   <div class="form-group">
    <%= form_with model: @infection, url: admin_infection_path(@infection), method: :patch do |f| %>
     <div class="row">
      <div class="col-4 mt-2">
       <%= f.label :感染症名 %>
        <%= f.text_field :name, class: "form-control"%>
      </div>
      <div class="col-3 mt-4 pt-3 pl-0">
       <%= f.submit "変更を保存" ,class: "btn btn-outline-info" %>
       <%= link_to "削除する", admin_infection_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-secondary" %>
     <% end %>
      </div>
     </div>
   </div>