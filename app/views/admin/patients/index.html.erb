<div class='row'>
  <%= render 'layouts/sidebar' %>
  <div class='col-md-8 offset-md-1 mt-3'>
    <h3>患者一覧</h3>

    <div class="table-title">
      <div class="row">
        <div class="col-md-2">
          [患者ID]
        </div>
        <div class="col-md-4">
          [名前]
        </div>
        <div class="col-md-2">
          [電話番号]
        </div>
        <div class="col-md-2">
          [性別]
        </div>
        <div class="col-md-2">
          [年齢]
        </div>
      </div>
    </div>

    <% @patients.each do |patient| %>
    <div class="table-index">
      <%= link_to admin_patient_path(patient) do %>
        <div class="row mb-3 border-bottom">
          <div class="col-md-2">
            <%= patient.id %>
          </div>
          <div class="col-md-4">
            <% if patient.full_name.present? %>
              <%= "#{patient.full_name} / #{patient.full_name_kana}" %>
            <% else %>
              <%= patient.full_name_kana %>
            <% end %>
          </div>
          <div class="col-md-2">
            <%= patient.telephone_number %>
          </div>
          <div class="col-md-2">
            <%= patient.gender_i18n %>
          </div>
          <div class="col-md-2">
            <% if patient.get_age.present? %>
              <%= patient.get_age %>歳
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
