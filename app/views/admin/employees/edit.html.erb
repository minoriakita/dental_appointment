<div class="container py-3">
 <div class="row">
  <div class="mini-title">スタッフ編集</div>
 </div>

 <div class="row pt-4">
   <%= form_with model: @employee, url: admin_employee_path(@employee), method: :patch do |f| %>
   <%= f.label :スタッフ名 %>
   <%= f.text_field :name %>
   <%= f.submit "変更を保存" ,class: "btn btn-primary" %>
   <%= link_to "削除する", admin_employee_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
   <% end %>
 </div>
</div>