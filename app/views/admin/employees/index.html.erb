<div class="container">
  <div class="row">
     <div class="mini-title">スタッフ一覧・追加</div>
     </div>
    <div>
     <%= form_with model: @employee, url: admin_employees_path, method: :post do |f| %>
     <%= f.label :スタッフ名 %>
     <%= f.text_field :name %>
     <%= f.submit "新規登録", class: "btn btn-success ml-3 mb-2" %>
     <% end %>
    </div>
  <div class="row">
   <div class="col-5">
    <table class="table table-bordered table-hover text-center">
     <thead class="thead">
      <tr>
       <th>スタッフ</th>
       <th colspan="3"></th>
      </tr>
     </thead>
    <tbody class="tbody">
      <% @employees.each do |employee| %>
       <tr>
        <td><%= employee.name %></td>
        <td><%= link_to "編集する", edit_admin_employee_path(employee), class: "btn btn-sm btn-success admin_genre_edit" %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
       <%= link_to "戻る", admin_item_path %>
  </div>
 </div>
</div>