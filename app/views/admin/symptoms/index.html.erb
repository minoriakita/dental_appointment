<div class='row'>
 <%= render 'layouts/item_sidebar' %>
  <div class='col-md-8 offset-md-1 mt-3'>
   <h3>症状一覧・追加</h3>
   <%= render 'layouts/error', obj: @symptom %>

   <div class="form-group">
    <%= form_with model: @symptom, url: admin_symptoms_path, method: :post do |f| %>
     <div class="row">
      <div class="col-4 mt-2">
       <%= f.label :症状名 %>
       <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-3 mt-4 pt-3 pl-0 ">
       <%= f.submit "新規登録", class: "btn btn-outline-info" %>
      </div>
     </div>
    <% end %>
  </div>

    <% @symptoms.each do |symptom| %>
     <div class="row mb-3">
      <div class="col-md-4">
       <%= symptom.name %>
      </div>
      <div>
       <%= link_to "編集", edit_admin_symptom_path(symptom), class: "btn btn-sm btn-block btn-outline-secondary" %>
      </div>
     </div>
    <% end %>
  </div>
</div>